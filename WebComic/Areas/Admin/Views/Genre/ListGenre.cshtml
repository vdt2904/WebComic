@{
	ViewData["Title"] = "ListGenre";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
	.flex-container {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.bi-plus-circle {
		font-size: 24px;
		color: #007bff;
		text-decoration: none;
	}

		.bi-plus-circle:hover {
			color: #0056b3;
		}
</style>
</style>

<div class="page-title-area">
	<div class="row align-items-center">
		<div class="col-sm-6">
			<div class="breadcrumbs-area clearfix">
				<h4 class="page-title pull-left">ADMIN</h4>
				<ul class="breadcrumbs pull-left">
					<li><a href="index.html">Admin</a></li>
					<li><span>Thể loại</span></li>
				</ul>
			</div>
		</div>
		<div class="col-sm-6 clearfix">
			<div class="user-profile pull-right">
				<img class="avatar user-thumb" src="../Admin/assets/images/author/avatar.png" alt="avatar">
				<h4 class="user-name dropdown-toggle" data-toggle="dropdown">Kumkum Rai <i class="fa fa-angle-down"></i></h4>
				<div class="dropdown-menu">
					<a class="dropdown-item" href="#">Message</a>
					<a class="dropdown-item" href="#">Settings</a>
					<a class="dropdown-item" href="#">Log Out</a>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="main-content-inner">
	<div class="col-12 mt-5">
		<div class="card">
			<div class="card-body">
				<div class="flex-container">
					<h4 class="header-title" style="margin-bottom: 0px!important;">Danh sách thể loại</h4>
					<a href="/admin/genre/add" class="bi bi-plus-circle"></a>
				</div>
				<div class="d-flex justify-content-center align-items-center" style="height: 10vh;">
					<span class="text-center" id="Delete"></span>
				</div>

				<div class="single-table">
					<div class="table-responsive">
						<table class="table table-hover progress-table text-center">
							<thead class="text-uppercase">
								<tr>
									<th scope="col">STT</th>
									<th scope="col">ID</th>
									<th scope="col">Tên thể loại</th>
									<th scope="col">Mô tả</th>
									<th scope="col">Hành động</th>
								</tr>
							</thead>
							<tbody id="list">
							</tbody>
						</table>
					</div>
				</div>
				<br />
				<div class="col-sm-12 col-md-7">
					<div class="dataTables_paginate paging_simple_numbers" id="dataTable_paginate">
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


<script src="@Url.Content("~/admin/ajax/genre.js")"></script>
<script>
	getlist(@ViewBag.Page)
</script>
